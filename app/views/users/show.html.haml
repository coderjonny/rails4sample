-provide(:title, @user.name)
%h1 Profile 
%div.row
  %div.col-md-4
    %section
      %h2
        = gravatar_for @user
        = @user.name
    %section
      = render 'shared/stats'
  %div.col-md-8
    = render 'follow_form' if signed_in?
    - if @user.microposts.any?
      %h3
        Microposts
        = @user.microposts.count
      %ol.microposts
        = render @microposts
      = will_paginate @microposts, renderer: BootstrapPagination::Rails, bootstrap: 3
